{% extends 'base-backend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark">back to list</a>
    <h1>Home</h1>
    <div class="d-flex justify-content-end align-items-end">
        {{ include('admin_home/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>

    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.text|raw }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>





    
{% endblock %}
