{% extends 'base-backend.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <a href="{{ path('app_product_index') }}"class="btn btn-dark">back to list</a>
    <h1>Product</h1>
    <div class="d-flex justify-content-end align-items-end">
        {{ include('product/_delete_form.html.twig') }}
            <a href="{{ path('app_product_edit', {'id': product.id}) }}"class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if product.image is defined and product.image is not null %}
                <img src="{{ asset('/images/products/' ~ product.image) }}" class="img-fluid">
                {% else %}
                N/A
                {% endif %}
                </td>
            </tr>
                <tr>
                <th>Mise a jour</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('d-m-Y H:i:s') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ product.subtitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description|raw }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>





    
{% endblock %}
