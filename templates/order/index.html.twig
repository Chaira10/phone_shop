{% extends 'base.html.twig' %}

{% block title %}Valider la commande{% endblock %}

{% block content %}
<h1>Valider la commande</h1>

<div class="row">
    <div class="col-md-6">
    
    {% set formHtml %}
    {{ form_start(form, {action:path('app_order_recap')}) }}
    {{ form_label(form.addresses, 'Choisissez votre adresse de livraison')}}
    <a href="{{ path('app_acount_address_add')}}">Ajouter une nouvelle adresse</a>
    {{ form_end(form) }}
    {% endset %}
    {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
    
    </div>
    <div class="col-md-6">
    <div class="text-center">
    <b>RÃ©capitulatif de la commande</b>
    </div>
    
    <div class="order-summary">
    {% for key, product in cart %}
    <div class="row {% if key > 0 %} mt-2 {% endif %}">
    <div class="col-2"><img src="{{ asset('images/products/' ~ product.product.image ) }}" alt="{{ product.product.name }}" height="75px"></div>
    <div class="col-8">{{ product.product.name }}<br/> {{product.product.subtitle}}</div>
    <div class="col-2 my-auto">x {{ product.quantity }}</div>
    </div>
    {% endfor %}
    </div>
    {# {{ dump(cart)}} #}
    
    </div>

</div>
{% endblock %}
