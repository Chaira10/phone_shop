{% extends 'base-backend.html.twig' %}

{% block title %}Carrier{% endblock %}

{% block body %}
    <a href="{{ path('app_carrier_index') }}" class="btn btn-dark">back to list</a>
    <h1>Carrier</h1>
<div class="d-flex justify-content-end align-items-end">
    {{ include('carrier/_delete_form.html.twig') }}
    <a href="{{ path('app_carrier_edit', {'id': carrier.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>
</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carrier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ carrier.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carrier.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ carrier.price }}</td>
            </tr>
        </tbody>
    </table>






{% endblock %}
