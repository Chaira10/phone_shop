{% extends 'base-backend.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <a href="{{ path('app_user_index') }}"class="btn btn-dark">back to list</a>
    <h1>User</h1>
    <div class="d-flex justify-content-end align-items-end">
        {{ include('user/_delete_form.html.twig') }}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}"class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
