{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark">back to list</a>
    <h1>Carousel</h1>
    <div class="d-flex justify-content-end align-items-end">
    {{ include('admin_carousel/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if carousel.image is defined and carousel.image is not null %}
                <img src="{{ asset('/images/carousel/' ~ carousel.image) }}" class="img-fluid">
                {% else %}
                N/A
                {% endif %}
                
                </td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.text|raw }}</td>
            </tr>
            <tr>
                <th>Mise Ã  jour</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>






{% endblock %}
