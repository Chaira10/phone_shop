{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href='{{ path('app_acount_address_add')}}' class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    <p> </p><br/>
    <a href='{{ path('app_account')}}' class=" btn btn-secondary">Retour </a>
    <hr>
    {% if app.user.addresses|length == 0 %}
    <p class="text-center">vous n'avez pas d'adresse dans votre compte client, pour en ajouter une<a href='{{ path('app_acount_address_add')}}'> Cliquer ici </a></p>
    {% else %}
    <div class="row">
    {% for address in app.user.addresses %}
    
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ address.name}}</h5>
                    <p class="card-text">
                    {{ address.address}}, <br/>
                    {{ address.zipcode}} - {{ address.city }} - {{ address.country }}
                    </p>
                    <a href="{{ path('app_acount_address_edit', {'id': address.id}) }}" class="btn btn-primary">Modifier</a><br><br>
                    <a href="{{ path('app_acount_address_delete', {'id': address.id}) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <br><br><br><br><br><br>
{% endblock %}
