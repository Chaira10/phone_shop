{% extends 'base-backend.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_order_index') }}" class="btn btn-dark">back to list</a>
    <h1 class="my-3">Order</h1>
        <div class="d-flex justify-content-end align-items-end">
    {# {{ include('admin_order/_delete_form.html.twig') }} #}
    {# <a href="{{ path('app_admin_order_edit', {'id': order.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a> #}
    </div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Commande</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Details</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
  <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>CarrierName</th>
                <td>{{ order.carrierName }}</td>
            </tr>
            <tr>
                <th>CarrierPrice</th>
                <td>{{ order.carrierPrice }}</td>
            </tr>
            <tr>
                <th>Delivery</th>
                <td>{{ order.delivery|raw }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ order.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ order.statut|raw}}</td>
            </tr>
        </tbody>
    </table>
  
  </div>
  <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
    <th>Nom</th>
    <th>Quantité</th>
    <th>Prix</th>
    <th>Total</th>
    </tr>
    </thead>
    <tbody>
  {% for detail in order.orderDetails %}
  <tr>
  <td>{{ detail.product }}</td>
  <td>{{ detail.quantity}}</td>
  <td>{{ detail.price}} €</td>
  <td>{{ detail.total}} €</td>
  </tr>
  {% else %}
  <tr><td colspan="4">Aucun détail</td></tr>
  {% endfor %}
  </tbody>
  </table>
  </div>
</div>














    






{% endblock %}
