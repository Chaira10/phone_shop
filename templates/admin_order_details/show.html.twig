{% extends 'base-backend.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_order_details_index') }}" class="btn btn-dark">back to list</a>
    <h1>Order Details</h1>
    <div class="d-flex justify-content-end align-items-end">
    {{ include('admin_order_details/_delete_form.html.twig') }}
    <a href="{{ path('app_admin_order_details_edit', {'id': order_detail.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="edit"></i></a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order_detail.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ order_detail.product }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order_detail.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order_detail.price }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order_detail.total }}</td>
            </tr>
        </tbody>
    </table>






{% endblock %}
